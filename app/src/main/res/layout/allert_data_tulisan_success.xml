<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stalls_data_cardview"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green">

            <TextView
                android:id="@+id/tv_title_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/comicbd"
                android:text="@string/str_title_data_tulisan"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ScrollView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_baseline_check_24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/comicbd"
                        android:text="@string/str_hint_judul_tulisan"
                        android:textColor="@color/black_blue"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"/>

                    <TextView
                        android:id="@+id/tv_judul"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/comic"
                        android:text="-"
                        android:textColor="@color/black_blue"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/comicbd"
                        android:text="@string/str_title_jenis"
                        android:textColor="@color/black_blue"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"/>

                    <TextView
                        android:id="@+id/tv_jenis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/comic"
                        android:text="-"
                        android:textColor="@color/black_blue"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/comicbd"
                        android:text="@string/str_hint_penulis"
                        android:textColor="@color/black_blue"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"/>

                    <TextView
                        android:id="@+id/tv_penulis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/comic"
                        android:textColor="@color/black_blue"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:weightSum="10">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/comicbd"
                        android:text="@string/str_link_title"
                        android:textColor="@color/black_blue"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"/>

                    <TextView
                        android:id="@+id/tv_link"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/comic"
                        android:textColor="@color/black_blue"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/comicbd"
                        android:text="@string/str_status_paten"
                        android:textColor="@color/black_blue"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"/>

                    <TextView
                        android:id="@+id/tv_status_paten"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/comic"
                        android:textColor="@color/black_blue"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/comicbd"
                        android:text="@string/str_batasan_umur"
                        android:textColor="@color/black_blue"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"/>

                    <TextView
                        android:id="@+id/tv_batasan_umur"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/comic"
                        android:textColor="@color/black_blue"
                        android:textSize="18sp"
                        android:layout_gravity="top|start"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/comicbd"
                android:text="@string/str_hint_deskripsi"
                android:textColor="@color/black_blue"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/comic"
                android:textAlignment="textStart"
                android:textColor="@color/black_blue"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:weightSum="4">

                <Button
                    android:id="@+id/btn_okey"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="4"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/comic"
                    android:text="@string/str_btn_okey"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="15dp"
                    android:backgroundTint="@color/green"
                    app:rippleColor="@color/cloud_blue"
                    app:strokeWidth="2dp"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>
